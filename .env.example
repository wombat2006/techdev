# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co

# Server Configuration
PORT=4000
NODE_ENV=development

# Redis Configuration (Upstash)
UPSTASH_REDIS_URL=your_upstash_redis_url_here
UPSTASH_REDIS_TOKEN=your_upstash_redis_token_here

# Database Configuration (MySQL)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=techsapo

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Cost Management
MONTHLY_BUDGET_LIMIT=70
COST_ALERT_THRESHOLD=0.8

# Japanese Embedding Models (HuggingFace)
EMBEDDING_MODEL_1=cl-tohoku/bert-base-japanese-v3
EMBEDDING_MODEL_2=sonoisa/sentence-bert-base-ja-mean-tokens-v2
EMBEDDING_MODEL_3=colorfulscoop/sbert-base-ja
EMBEDDING_MODEL_4=rinna/japanese-roberta-base
EMBEDDING_MODEL_5=tohoku-nlp/bert-base-japanese-v2

# === GoogleDrive + OpenAI RAG Configuration ===
# Google Drive API OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here

# OpenAI API for RAG and wall-bounce analysis
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORGANIZATION=org-your_organization_id_here

# RAG System Settings
DEFAULT_VECTOR_STORE_NAME=techsapo-knowledge-base
MAX_DOCUMENTS_PER_SYNC=100
DOCUMENT_BATCH_SIZE=5
ENABLE_WALL_BOUNCE_BY_DEFAULT=true
DEFAULT_WALL_BOUNCE_MODELS=o3-high,gemini

# === Google Drive Webhook Configuration ===
# Webhook base URL (must be HTTPS in production)
WEBHOOK_BASE_URL=https://your-domain.com
GOOGLEDRIVE_WEBHOOK_SECRET=your-secure-webhook-secret-change-in-production

# RAG Folder ID (extracted from GoogleDrive URL)
RAG_FOLDER_ID=your_googledrive_folder_id_here

# Real-time sync settings
RAG_REALTIME_SYNC_ENABLED=true
RAG_WEBHOOK_RETRY_ATTEMPTS=3
RAG_WEBHOOK_TIMEOUT_MS=5000

# MCP (Model Context Protocol) Endpoints
MCP_O3_HIGH_ENDPOINT=http://localhost:8001
MCP_GEMINI_ENDPOINT=http://localhost:8002